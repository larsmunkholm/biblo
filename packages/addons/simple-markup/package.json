{
  "name": "@biblo/addon-simple-markup",
  "version": "1.1.0",
  "description": "Allow using simple markup in texts in Biblo files",
  "private": false,
  "main": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "rimraf ./lib && bob build",
    "clean": "eslint --fix \"./src/**/*.*\" && prettier --write \"./src/**/*.*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larsmunkholm/biblo.git"
  },
  "author": "Lars Munkholm",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/larsmunkholm/biblo/issues"
  },
  "homepage": "https://larsmunkholm.github.io/biblo/docs/addons/simple-markup/",
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-native": "*",
    "react": ">=18.1.0",
    "react-native": ">=0.70.1"
  },
  "devDependencies": {
    "react-native-builder-bob": "^0.20.1",
    "typescript": "^4.9.3"
  },
  "react-native": "src/index.tsx",
  "module": "lib/module/index.js",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "module",
      "typescript"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
